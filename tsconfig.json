{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "ESNext",
        "module": "nodenext",
        "types": ["vite/client", "node"],
        "moduleResolution": "nodenext",
        "paths": {
            "@/*": ["src/*"]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "baseUrl": "./", 
    },
    "include": [
        "src",
        "vite.config.ts",
    ],
}